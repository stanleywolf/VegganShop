using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace _17.vegiShop
{
    class vegiShop
    {
        static void Main(string[] args)
        {
            double prisePerVegi = double.Parse(Console.ReadLine());
            double prisePerFruit = double.Parse(Console.ReadLine());
            int kgVegi = int.Parse(Console.ReadLine());
            int kgFruit = int.Parse(Console.ReadLine());
            var priceVegi = prisePerVegi * kgVegi;
            var priceFruit = prisePerFruit * kgFruit;
            var result = (priceVegi + priceFruit) / 1.94;
            Console.WriteLine(result);

        }
    }
}
